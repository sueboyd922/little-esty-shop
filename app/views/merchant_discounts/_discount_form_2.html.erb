<%= form_with url: path, method: method do |form| %>
<%= form.label :quantity, "# of items to trigger discount" %>
<%= form.text_field :quantity, value: @discount.quantity %>
<%= form.label :percent_discount, "Percent Discounted" %>
<%= form.text_field :percent_discount, value: @discount.percent_discount %>
<%= form.submit button_text %>
<% end %>
